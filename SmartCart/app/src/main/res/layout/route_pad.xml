<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/routePad"
        android:layout_alignRight="@+id/routePad"
        android:layout_alignTop="@+id/routePad"
        android:layout_alignBottom="@+id/routePad"
        android:src="@drawable/pad"
        android:alpha="0.4"
        android:scaleType="fitXY"/>

    <edu.sjtu.chao.smartcart.RouteView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:id="@+id/routePad"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>